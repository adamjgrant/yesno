<%= form_for(@issue) do |f| %>
  <% if @issue.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@issue.errors.count, "error") %> prohibited this issue from being saved:</h2>

      <ul>
      <% @issue.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
    <p>Use an affirmative title, not a question. E.g. "John is good at math"</p>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
    <p>Now pose the title as a question with some snark.</p>
  </div>
  <div class="field">
    <%= f.label :image%><br>
    <%= f.text_field :image%>
    <p>Full url</p>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
